@model e_commercedotNet.Models.ConfirmationViewModel
<div class="container confirmation-container">
    <h2 class="confirmation-title">Confirmation de l'achat</h2>
    <h4 class="confirmation-subtitle">Merci pour votre commande, voici un récapitulatif :</h4>
    <ul class="list-group confirmation-list">
        @foreach (var item in Model.CartItems)
        {
            <li class="confirmation-list-item">
                @item.Product.Name
                <span>Quantité: @item.Quantity | Prix: @(item.Quantity * item.Product.Price) €</span>
            </li>
        }
    </ul>
    <h4 class="confirmation-total">Total : @Model.Total €</h4>
    <form method="post" asp-action="FinalizePurchase">
        <button type="submit" class="btn btn-primary btn-purchase-confirm">Confirmer et finaliser l'achat</button>
    </form>
</div>
<style>
    /* Global Variables */
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #2ecc71;
        --background-color: #f4f6f7;
        --text-color: #333;
        --border-color: #e0e4e8;
        --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Cart Page Styles */
    .cart-container {
        background-color: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: var(--card-shadow);
        max-width: 900px;
        margin: 2rem auto;
    }

    .cart-title {
        color: var(--primary-color);
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-align: center;
        border-bottom: 3px solid var(--secondary-color);
        padding-bottom: 0.5rem;
    }

    .cart-table {
        border-radius: 8px;
        overflow: hidden;
    }

        .cart-table thead {
            background-color: var(--primary-color);
            color: white;
        }

        .cart-table th, .cart-table td {
            vertical-align: middle !important;
            padding: 15px;
            border-color: var(--border-color);
            transition: background-color 0.3s ease;
        }

        .cart-table tbody tr:hover {
            background-color: rgba(52, 152, 219, 0.05);
        }

    .cart-quantity-input {
        max-width: 100px;
        text-align: center;
        border: 2px solid var(--border-color);
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .cart-quantity-input:focus {
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }

    .cart-total {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--primary-color);
        text-align: right;
        margin-top: 1rem;
    }

    .cart-empty-message {
        background-color: #f8f9fa;
        border-left: 4px solid var(--secondary-color);
        padding: 1rem;
        margin: 1rem 0;
        color: var(--text-color);
        border-radius: 4px;
    }

    /* Confirmation Page Styles */
    .confirmation-container {
        background-color: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: var(--card-shadow);
        max-width: 700px;
        margin: 2rem auto;
    }

    .confirmation-title {
        color: var(--accent-color);
        font-weight: 700;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .confirmation-subtitle {
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .confirmation-list {
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 1.5rem;
    }

    .confirmation-list-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px;
        background-color: #f8f9fa;
        border-bottom: 1px solid var(--border-color);
        transition: background-color 0.3s ease;
    }

        .confirmation-list-item:last-child {
            border-bottom: none;
        }

        .confirmation-list-item:hover {
            background-color: rgba(46, 204, 113, 0.05);
        }

    .confirmation-total {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--primary-color);
        text-align: right;
        margin-bottom: 1.5rem;
    }

    /* Button Styles */
    .btn-cart-update,
    .btn-cart-remove,
    .btn-purchase-confirm {
        border-radius: 6px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-cart-update {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
    }

        .btn-cart-update:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

    .btn-cart-remove {
        background-color: #e74c3c;
        border-color: #e74c3c;
    }

        .btn-cart-remove:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }

    .btn-purchase-confirm {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
        width: 100%;
    }

        .btn-purchase-confirm:hover {
            background-color: #27ae60;
            border-color: #27ae60;
        }

</style>