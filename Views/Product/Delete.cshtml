@model e_commercedotNet.Models.Product

@{
    ViewData["Title"] = "Supprimer le produit";
}

<h2>@ViewData["Title"]</h2>

<h3>Êtes-vous sûr de vouloir supprimer ce produit ?</h3>
<div>
    <p><strong>Nom:</strong> @Model.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Prix:</strong> @Model.Price €</p>
    <p><strong>Quantité:</strong> @Model.StockQuantity</p>
    <p><strong>Catégorie:</strong> @Model.Category</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
