@model e_commercedotNet.Models.User

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid profile-container">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block profile-sidebar">
            <div class="position-sticky">
                <h4 class="profile-sidebar-title">Menu</h4>
                <ul class="nav flex-column profile-nav">
                    <li class="profile-nav-item">
                        <a class="profile-nav-link active" href="@Url.Action("Profile", "Account")">
                            <i class="bi bi-person-circle"></i> Mon Profil
                        </a>
                    </li>
                    <li class="profile-nav-item">
                        <a class="profile-nav-link" href="@Url.Action("Index", "Cart")">
                            <i class="bi bi-box"></i> Mes Commandes
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main content -->
        <div class="col-md-9 ms-sm-auto col-lg-10 profile-main-content">
            <h2 class="profile-welcome">Bienvenue, @Model.Nom @Model.Prenom</h2>

            <div class="profile-card">
                <div class="card-body">
                    <h4 class="profile-card-title">Mes Informations Personnelles</h4>
                    <form method="post" asp-action="UpdateProfile" class="profile-form">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="Nom" class="form-label">Nom</label>
                            <input type="text" class="form-control" id="Nom" name="Nom" value="@Model.Nom" required>
                        </div>
                        <div class="mb-3">
                            <label for="Prenom" class="form-label">Prénom</label>
                            <input type="text" class="form-control" id="Prenom" name="Prenom" value="@Model.Prenom" required>
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Mot de Passe</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Nouveau mot de passe">
                        </div>
                        <button type="submit" class="btn btn-update-profile">Mettre à jour</button>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success profile-alert" role="alert">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                        else if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger profile-alert" role="alert">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                    </form>
                </div>
            </div>

            <!-- Logout Button -->
            <form method="post" asp-action="Logout" class="mt-4">
                <button type="submit" class="btn btn-logout">Déconnexion</button>
            </form>
        </div>
    </div>
</div>
<style>
    /* Color Palette and Global Variables */
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #2ecc71;
        --background-color: #f4f6f7;
        --text-color: #333;
        --sidebar-bg-color: #f8f9fa;
        --border-color: #e0e4e8;
        --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Layout and Global Styles */
    .profile-container {
        background-color: var(--background-color);
        min-height: 100vh;
    }

    /* Sidebar Styles */
    .profile-sidebar {
        background-color: var(--sidebar-bg-color) !important;
        border-right: 1px solid var(--border-color);
        height: 100vh;
        position: sticky;
        top: 0;
        padding: 2rem 1rem;
    }

    .profile-sidebar-title {
        color: var(--primary-color);
        font-weight: 700;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 3px solid var(--secondary-color);
    }

    .profile-nav {
        margin-top: 1rem;
    }

    .profile-nav-item {
        margin-bottom: 0.5rem;
    }

    .profile-nav-link {
        color: var(--primary-color);
        display: flex;
        align-items: center;
        padding: 0.75rem 1rem;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .profile-nav-link:hover {
            background-color: rgba(52, 152, 219, 0.1);
            color: var(--secondary-color);
        }

        .profile-nav-link.active {
            background-color: var(--secondary-color);
            color: white;
            font-weight: 600;
        }

        .profile-nav-link i {
            margin-right: 0.75rem;
            font-size: 1.25rem;
        }

    /* Main Content Styles */
    .profile-main-content {
        padding: 2rem;
    }

    .profile-welcome {
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
        border-bottom: 3px solid var(--secondary-color);
    }

    .profile-card {
        background-color: white;
        border-radius: 12px;
        box-shadow: var(--card-shadow);
        padding: 2rem;
        margin-bottom: 1.5rem;
    }

    .profile-card-title {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    /* Form Styles */
    .profile-form .form-label {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .profile-form .form-control {
        border: 2px solid var(--border-color);
        border-radius: 6px;
        padding: 0.75rem;
        transition: all 0.3s ease;
    }

        .profile-form .form-control:focus {
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }

    /* Button Styles */
    .btn-update-profile {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
        color: white;
        border-radius: 6px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
    }

        .btn-update-profile:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

    .btn-logout {
        background-color: #e74c3c;
        border-color: #e74c3c;
        color: white;
        border-radius: 6px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
    }

        .btn-logout:hover {
            background-color: #c0392b;
            border-color: #c0392b;
        }

    /* Alert Styles */
    .profile-alert {
        margin-top: 1rem;
        border-radius: 6px;
    }

  
</style>